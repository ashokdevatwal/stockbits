  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.3.1",
    "bcrypt": "^5.0.0",
    "bootstrap": "^4.1.3",
    "electron-dl": "^1.12.0",
    "jquery": "^3.3.1",
    "knex": "^0.19.5",
    "node-gyp": "^3.8.0",
    "popper.js": "^1.14.4",
    "sqlite3": "^4.0.2",
    "tether": "^1.4.4"
  },
  "devDependencies": {
    "electron": "^2.0.5",
    "electron-builder": "^20.28.4"
  },
  "build": {
    "productName": "StockBits",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "shortcutName": "StockBits",
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "perMachine": true,
      "menuCategory": true
    }
  }
}
